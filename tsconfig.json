{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "types": ["bun"],
    "paths": {
      "@opencode-ai/sdk": ["./node_modules/@opencode-ai/sdk/dist/src/index.d.ts"],
      "@opencode-ai/sdk/client": ["./node_modules/@opencode-ai/sdk/dist/src/client.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
